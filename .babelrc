{
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": false,
                "targets": {
                    "node": "10"
                }
            }
        ],
        "@babel/typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-syntax-dynamic-import",
        "@babel/plugin-proposal-optional-chaining",
        "@babel/plugin-proposal-nullish-coalescing-operator",
        "inline-react-svg",
        [
            "styled-components",
            {
                "ssr": true,
                "displayName": true
            }
        ]
    ],
    "exclude": "node_modules/**"
}
